<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module04View.SuperMarioCollectionView"
             Title="Power-Ups">
    <ContentPage.Content>
        <StackLayout>
            
            <!--List of Power Ups -->
            <Frame Padding="15" 
                   Margin="0" 
                   CornerRadius="12" 
                   HasShadow="False">
                <CollectionView ItemsSource="{Binding PowerUps}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10"
                                  RowDefinitions="Auto, *"
                                  ColumnDefinitions="Auto, *">
                                <Image Grid.RowSpan="2"
                                       Source="{Binding Image}"
                                       Aspect="AspectFit"
                                       HeightRequest="50"
                                       WidthRequest="50" />
                                <Label Grid.Column="1"
                                       Text="{Binding PowerUpName}" 
                                       FontSize="Medium"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       VerticalOptions="Center"/>
                                <Label Grid.Row="1"
                                       Grid.Column="1"
                                       Text="{Binding Effect}" 
                                       FontSize="Small"
                                       TextColor="#E52521"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module04View.MainPage"
             Title="ELMALIA JANE S. DIAZ">

        <Grid>

            <RelativeLayout>
                
                <Image x:Name="SuperMarioBackground" 
                       Aspect="AspectFill"
                       RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                       RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}" />

                <Image x:Name="SuperMarioLogo" 
                       Aspect="AspectFit"
                       RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.5}"
                       RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.2}"
                       RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.25}"
                       RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.24}"/>
        
            </RelativeLayout>

            <StackLayout Spacing="10" 
                         Padding="70"
                         Margin="0,60,0,0"
                         VerticalOptions="CenterAndExpand">

                <Button Text="Games"    
                        Clicked="OnTextCellClicked" 
                        CornerRadius="50"
                        TextColor="White"
                        BackgroundColor="#E52521" />

                <Button Text="Characters" 
                     Clicked="OnImageCellClicked" 
                     CornerRadius="50"
                     TextColor="White"
                     BackgroundColor="#E52521" />

                <Button Text="Levels" 
                     Clicked="OnSwitchCellClicked" 
                     CornerRadius="50"
                     TextColor="White"
                     BackgroundColor="#E52521" />

                <Button Text="Trivia Questions" 
                    Clicked="OnEntryCellClicked" 
                    CornerRadius="50"
                    TextColor="White"
                    BackgroundColor="#E52521" />

                <Button Text="Power-Ups" 
                    Clicked="OnCollectionViewClicked" 
                    CornerRadius="50"
                    TextColor="White"
                    BackgroundColor="#E52521" />

                <Button Text="Exit" 
                    Clicked="OnExitButtonClicked" 
                    CornerRadius="50"
                    TextColor="White"
                    BackgroundColor="#E52521" />

            </StackLayout>
    
        </Grid>

</ContentPage>

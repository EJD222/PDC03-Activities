<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module03Layout.RelativeLayoutPage"
             Title="Relative Layout Page">
    <ContentPage.Content>
        
        <RelativeLayout>
            
            <Image Source="relativeLayoutImage.jpg" 
                   HeightRequest="135"
                   WidthRequest="135"
                   RelativeLayout.XConstraint="{ConstraintExpression Type=Constant, Constant=0}"
                   RelativeLayout.YConstraint="{ConstraintExpression Type=Constant, Constant=0}" />
            
            <Label Text="RelativeLayout Demo" 
                   FontAttributes = "Bold"
                   RelativeLayout.XConstraint="{ConstraintExpression Type=Constant, Constant=0}"
                   RelativeLayout.YConstraint="{ConstraintExpression Type=Constant, Constant=138}" 
                   TextColor="#CFC68D"/>
            
        </RelativeLayout>
        
    </ContentPage.Content>
</ContentPage>